{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": ["ES6", "DOM"],
    "noEmitHelpers": true
  },
  "files": [
    "app/main.ts",
    "app/globals.ts",
    "build/main.ts"
  ],
  "include": [
    "app/**/module.ts"
  ],
  "exclude": [
    "node_modules",
    "aot",
    "build/assets/main-aot.ts"
  ]
}
